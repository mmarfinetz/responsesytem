# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Database Configuration - PostgreSQL for Production
DATABASE_TYPE=postgresql
DATABASE_URL=postgresql://voicebot:voicebot123@localhost:5432/voicebot
DATABASE_REPLICA_URL=postgresql://voicebot:voicebot123@localhost:5432/voicebot_replica

# Database Pool Configuration
DB_POOL_MIN=5
DB_POOL_MAX=50
DB_POOL_ACQUIRE_TIMEOUT=60000
DB_POOL_IDLE_TIMEOUT=300000

# Development fallback to SQLite
# DATABASE_TYPE=sqlite
# DATABASE_URL=./database.sqlite

# Security
JWT_SECRET=dev-jwt-secret-change-for-production-minimum-32-chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
API_KEY=dev-api-key-for-frontend-backend-communication
SESSION_SECRET=dev-session-secret-for-development-only

# Google Voice API Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3001/auth/google/callback
GOOGLE_VOICE_WEBHOOK_SECRET=your-webhook-secret

# Claude AI Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key
CLAUDE_MODEL=claude-3-sonnet-20240229
CLAUDE_MAX_TOKENS=1000

# Business Configuration
BUSINESS_NAME=Your Plumbing Company
BUSINESS_PHONE=+1234567890
BUSINESS_EMAIL=contact@yourplumbing.com
BUSINESS_ADDRESS=123 Main St, City, State 12345
SERVICE_AREA_RADIUS=50
EMERGENCY_SURCHARGE=1.5

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Webhook Configuration
WEBHOOK_BASE_URL=http://localhost:3001
WEBHOOK_TIMEOUT=30000

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache Configuration
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600

# Circuit Breaker Configuration
CIRCUIT_BREAKER_ERROR_THRESHOLD=50
CIRCUIT_BREAKER_TIMEOUT=60000
CIRCUIT_BREAKER_RESET_TIMEOUT=300000

# Enhanced Rate Limiting
RATE_LIMIT_MAX_REQUESTS=500
LOGIN_RATE_LIMIT=10
AI_RATE_LIMIT=100
WEBHOOK_RATE_LIMIT=2000

# AI Configuration
CLAUDE_API_TIMEOUT=30000
AI_COST_LIMIT_MONTHLY=1000

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
MEMORY_LIMIT=2147483648
ENABLE_METRICS=true
METRICS_PORT=3002

# Emergency Response Configuration
EMERGENCY_RESPONSE_TIME_TARGET=120
EMERGENCY_ESCALATION_TIME=300
AFTER_HOURS_EMERGENCY_RATE=1.5